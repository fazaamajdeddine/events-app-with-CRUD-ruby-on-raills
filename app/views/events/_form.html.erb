<h1>Create new Event</h1>

<%= form_with(model: event)  do |f|%>
<p>
<%= f.label :title %> <br>
<%= f.text_field :title %>
</p>

<p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
</p>

<p>
<%=f.label :body %><br>
<%=f.text_area :body %>
</p>

<div class="pt-4 flex items-center space-x-4">
    <button class="bg-blue-500 flex justify-center items-center  text-white px-4 py-3 rounded-md focus:outline-none"><%= f.submit %></button>


</div>

<% end %>